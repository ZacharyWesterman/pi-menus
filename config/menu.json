{
	"main": {
		"type": "menu",
		"title": "Main Menu",
		"options": [
			{
				"text": "Network Options",
				"goto": "network"
			},
			{
				"text": "Software Version",
				"goto": "software"
			},
			{
				"text": "Shut Down",
				"goto": "shutdown"
			}
		]
	},

	"shutdown": {
		"type": "menu",
		"title": "Shut Down?",
		"options": [
			{
				"text": "Yes",
				"action": "shutdown"
			},
			{
				"text": "No",
				"return": true
			}
		]
	},

	"network": {
		"type": "menu",
		"title": "Network Options",
		"options": [
			{
				"text": "Connection Info",
				"goto": "device_info"
			},
			{
				"text": "List Devices",
				"goto": "device_list"
			},
			{
				"text": "Change Network",
				"goto": "network_list"
			}
		]
	},

	"network_list": {
		"type": "menu",
		"title": "Available Networks",
		"template": {
			"var": "network_list",
			"options": [
				{
					"text": "{line}",
					"input": {
						"var": "network_pass",
						"password": true
					},
					"return": true
				}
			]
		}
	},

	"device_list": {
		"type": "menu",
		"title": "Devices on Network",
		"template": {
			"var": "device_list",
			"options": [
				{
					"text": "{item[2]}",
					"alt": "{item[1]}"
				}
			]
		},
		"options": []
	},

	"device_info": {
		"type": "message",
		"title": "Connection Info",
		"text": "{network_ssid}\n{ip_address}"
	},

	"software": {
		"type": "menu",
		"title": "Version {software_version}",
		"options": [
			{
				"text": "Fetch update",
				"action": "fetch_update"
			}
		]
	}
}
