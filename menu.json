{
	"main": {
		"type": "menu",
		"title": "Main Menu",
		"options": [
			{
				"text": "Network Options",
				"goto": "network"
			},
			{
				"text": "Software Version",
				"goto": "software"
			}
		]
	},

	"network": {
		"type": "menu",
		"title": "{network_ssid}",
		"options": [
			{
				"text": "Change Network",
				"goto": "network_list"
			},
			{
				"text": "List Devices",
				"goto": "device_list"
			}
		]
	},

	"network_list": {
		"type": "menu",
		"title": "Available Networks",
		"template": {
			"var": "network_list",
			"options": [
				{
					"text": "{line}",
					"input": {
						"var": "network_pass",
						"password": true
					},
					"return": true
				}
			]
		},
		"options": []
	},

	"device_list": {
		"type": "menu",
		"title": "Devices on Network",
		"template": {
			"var": "device_list",
			"options": [
				{
					"text": "{item[2]}",
					"alt": "{item[1]}"
				}
			]
		},
		"options": []
	},

	"software": {
		"type": "menu",
		"title": "Version {software_version}",
		"options": [
			{
				"text": "Fetch update",
				"action": "git pull"
			}
		]
	}
}
